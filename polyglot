                    <button onclick="toggleSettings()" class="text-slate-400 hover:text-white"><i data-lucide="x" class="w-5 h-5"></i></button>
                </div>
                
                <p class="text-sm text-slate-300 mb-4">
                    Utilise l'API Google Gemini. 
                    <a href="https://aistudio.google.com/app/apikey" target="_blank" class="text-indigo-400 underline hover:text-indigo-300">Clé gratuite ici</a>.
                </p>

                <div class="mb-4">
                    <label class="block text-xs font-semibold text-slate-500 uppercase mb-2">Clé API Gemini</label>
                    <div class="relative">
                        <input type="password" id="apiKeyInput" placeholder="AIzaSy..." class="w-full bg-slate-900 border border-slate-700 rounded-lg px-4 py-2 text-sm text-white focus:ring-2 focus:ring-indigo-500 focus:outline-none">
                        <button onclick="toggleShowKey()" class="absolute right-3 top-2.5 text-slate-500 hover:text-slate-300">
                            <i data-lucide="eye" class="w-4 h-4"></i>
                        </button>
                    </div>
                </div>

                <div class="flex items-center gap-2 mb-6">
                    <input type="checkbox" id="rememberKey" class="w-4 h-4 rounded border-slate-700 bg-slate-900 text-indigo-600 focus:ring-indigo-500">
                    <label for="rememberKey" class="text-sm text-slate-400 cursor-pointer">Se souvenir de la clé (Cache navigateur)</label>
                </div>

                <button onclick="saveApiKey()" class="bg-indigo-600 hover:bg-indigo-500 text-white px-4 py-2 rounded-lg text-sm font-medium transition-colors w-full">Appliquer</button>
            </div>
        </div>

        <!-- Left Panel: Input -->
        <section class="flex-1 flex flex-col border-b md:border-b-0 md:border-r border-slate-700 min-h-[50%] md:min-h-0">
            <div class="bg-slate-800/50 p-3 flex items-center justify-between border-b border-slate-700">
                <div class="flex items-center gap-3">
                    <span class="text-xs font-semibold text-indigo-400 uppercase tracking-wider">Entrée</span>
                    <select id="inputLang" class="bg-slate-900 border border-slate-700 text-sm rounded-md px-3 py-1.5 focus:outline-none focus:border-indigo-500 transition-colors">
                        <option value="javascript">JavaScript</option>
                        <option value="python">Python</option>
                        <option value="java">Java</option>
                        <option value="lua">Lua</option>
                        <option value="csharp">C#</option>
                        <option value="cpp">C++</option>
                        <option value="php">PHP</option>
                        <option value="ruby">Ruby</option>
                        <option value="go">Go</option>
                        <option value="rust">Rust</option>
                        <option value="dart">Dart</option>
                        <option value="haskell">Haskell</option>
                        <option value="r">R Language</option>
                        <option value="typescript">TypeScript</option>
                        <option value="sql">SQL</option>
                    </select>
                </div>
                <div class="flex gap-1">
                    <input type="file" id="fileInput" class="hidden" onchange="handleFileUpload(event)">
                    <button onclick="document.getElementById('fileInput').click()" class="p-2 hover:bg-slate-700 rounded-md text-slate-400 hover:text-white transition-colors" title="Ouvrir un fichier">
                        <i data-lucide="file-up" class="w-4 h-4"></i>
                    </button>
                    <button onclick="clearEditor()" class="p-2 hover:bg-slate-700 rounded-md text-slate-400 hover:text-white transition-colors" title="Effacer">
                        <i data-lucide="trash-2" class="w-4 h-4"></i>
                    </button>
                </div>
            </div>

            <div class="relative flex-1 bg-[#1e1e1e]">
                <textarea id="inputCode" 
                    class="w-full h-full bg-transparent text-slate-300 font-mono p-4 resize-none focus:outline-none text-sm leading-6"
                    placeholder="// Collez votre code ou glissez un fichier..." 
                    spellcheck="false"></textarea>
            </div>
        </section>

        <!-- Middle Action Bar -->
        <div class="bg-slate-900 flex md:flex-col items-center justify-center gap-4 p-2 md:p-4 z-10 border-b md:border-b-0 md:border-r border-slate-700 shadow-xl">
            <button onclick="swapLanguages()" class="p-2 bg-slate-800 hover:bg-slate-700 rounded-full border border-slate-600 text-slate-300 transition-all hover:rotate-180" title="Inverser">
                <i data-lucide="arrow-right-left" class="w-5 h-5 md:rotate-90"></i>
            </button>
            <button id="convertBtn" onclick="convertCode()" class="group bg-indigo-600 hover:bg-indigo-500 text-white rounded-full p-3 md:p-4 shadow-lg transition-all active:scale-95">
                <i data-lucide="play" class="w-6 h-6 fill-current"></i>
            </button>
        </div>

        <!-- Right Panel: Output -->
        <section class="flex-1 flex flex-col min-h-[50%] md:min-h-0 bg-slate-900/50">
            <div class="bg-slate-800/50 p-3 flex items-center justify-between border-b border-slate-700">
                <div class="flex items-center gap-3">
                    <span class="text-xs font-semibold text-emerald-400 uppercase tracking-wider">Sortie</span>
                    <select id="outputLang" class="bg-slate-900 border border-slate-700 text-sm rounded-md px-3 py-1.5 focus:outline-none focus:border-indigo-500 transition-colors">
                        <option value="python">Python</option>
                        <option value="javascript">JavaScript</option>
                        <option value="lua">Lua</option>
                        <option value="java">Java</option>
                        <option value="csharp">C#</option>
                        <option value="cpp">C++</option>
                        <option value="rust">Rust</option>
                        <option value="go">Go</option>
                        <option value="dart">Dart</option>
                        <option value="typescript">TypeScript</option>
                    </select>
                </div>
                <div class="flex gap-1">
                    <button onclick="downloadOutput()" class="p-2 hover:bg-slate-700 rounded-md text-slate-400 hover:text-white transition-colors" title="Télécharger le fichier">
                        <i data-lucide="download" class="w-4 h-4"></i>
                    </button>
                    <button onclick="copyToClipboard('outputCode')" class="p-2 hover:bg-slate-700 rounded-md text-slate-400 hover:text-white transition-colors" title="Copier">
                        <i data-lucide="copy" class="w-4 h-4"></i>
                    </button>
                </div>
            </div>

            <div class="relative flex-1 bg-[#1e1e1e]">
                <div id="loadingOverlay" class="absolute inset-0 bg-slate-900/80 backdrop-blur-sm z-20 flex flex-col items-center justify-center hidden">
                    <div class="loader mb-3"></div>
                    <p class="text-sm text-slate-300 font-medium animate-pulse">Traduction IA...</p>
                </div>
                <textarea id="outputCode" readonly
                    class="w-full h-full bg-slate-900/30 text-slate-300 font-mono p-4 resize-none focus:outline-none text-sm leading-6 border-l-4 border-transparent"
                    placeholder="Le code converti apparaîtra ici..."></textarea>
            </div>
        </section>

    </main>

    <footer class="bg-slate-900 border-t border-slate-800 py-2 px-4 text-center shrink-0 flex justify-between items-center text-[10px] text-slate-500">
        <span>PolyGlot v2.5</span>
        <span id="statusMsg" class="hidden text-emerald-400 font-bold uppercase tracking-widest">Copié avec succès</span>
        <span>Support Fichiers & Cache Actif</span>
    </footer>

    <script>
        lucide.createIcons();

        const inputLang = document.getElementById('inputLang');
        const outputLang = document.getElementById('outputLang');
        const inputCode = document.getElementById('inputCode');
        const outputCode = document.getElementById('outputCode');
        const loadingOverlay = document.getElementById('loadingOverlay');
        const settingsModal = document.getElementById('settingsModal');
        const apiKeyInput = document.getElementById('apiKeyInput');
        const apiKeyStatus = document.getElementById('apiKeyStatus');
        const rememberKeyCheckbox = document.getElementById('rememberKey');

        // Extension Mapping for Download
        const extensions = {
            'javascript': 'js', 'python': 'py', 'java': 'java', 'lua': 'lua', 
            'csharp': 'cs', 'cpp': 'cpp', 'php': 'php', 'ruby': 'rb', 
            'go': 'go', 'rust': 'rs', 'dart': 'dart', 'haskell': 'hs', 
            'r': 'r', 'typescript': 'ts', 'sql': 'sql'
        };

        // API Key Logic
        let apiKey = localStorage.getItem('polyglot_api_key') || sessionStorage.getItem('polyglot_api_key') || '';
        if(apiKey) {
            apiKeyInput.value = apiKey;
            updateKeyUI(true);
            if(localStorage.getItem('polyglot_api_key')) rememberKeyCheckbox.checked = true;
        }

        function updateKeyUI(isConnected) {
            apiKeyStatus.textContent = isConnected ? "API Connectée" : "Configurer API";
            apiKeyStatus.className = isConnected ? "text-emerald-400" : "text-slate-400";
        }

        function toggleSettings() { settingsModal.classList.toggle('hidden'); }
        function toggleShowKey() { apiKeyInput.type = apiKeyInput.type === 'password' ? 'text' : 'password'; }

        function saveApiKey() {
            const key = apiKeyInput.value.trim();
            if(!key) return alert("Entrez une clé.");
            
            apiKey = key;
            if(rememberKeyCheckbox.checked) {
                localStorage.setItem('polyglot_api_key', key);
                sessionStorage.removeItem('polyglot_api_key');
            } else {
                sessionStorage.setItem('polyglot_api_key', key);
                localStorage.removeItem('polyglot_api_key');
            }
            
            updateKeyUI(true);
            toggleSettings();
        }

        // File Handlers
        function handleFileUpload(event) {
            const file = event.target.files[0];
            if (!file) return;
            const reader = new FileReader();
            reader.onload = (e) => {
                inputCode.value = e.target.result;
                // Auto-detect extension to set language
                const ext = file.name.split('.').pop().toLowerCase();
                for (const [lang, lExt] of Object.entries(extensions)) {
                    if (ext === lExt) { inputLang.value = lang; break; }
                }
            };
            reader.readAsText(file);
        }

        function downloadOutput() {
            const content = outputCode.value;
            if(!content) return alert("Rien à télécharger.");
            const ext = extensions[outputLang.value] || 'txt';
            const blob = new Blob([content], { type: 'text/plain' });
            const url = URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.href = url;
            a.download = `translated_code.${ext}`;
            a.click();
            URL.revokeObjectURL(url);
        }

        function swapLanguages() {
            const tempVal = inputLang.value;
            inputLang.value = outputLang.value;
            outputLang.value = tempVal;
            if (outputCode.value) {
                inputCode.value = outputCode.value;
                outputCode.value = "";
            }
        }

        function clearEditor() {
            if(confirm("Effacer tout ?")) {
                inputCode.value = '';
                outputCode.value = '';
            }
        }

        function copyToClipboard(id) {
            const el = document.getElementById(id);
            if(!el.value) return;
            el.select();
            document.execCommand('copy');
            const msg = document.getElementById('statusMsg');
            msg.classList.remove('hidden');
            setTimeout(() => msg.classList.add('hidden'), 2000);
        }

        async function convertCode() {
            const code = inputCode.value.trim();
            if (!code) return alert("Entrez du code.");
            if (!apiKey) return toggleSettings();

            loadingOverlay.classList.remove('hidden');

            try {
                // Use the environment recommended model
                const url = `https://generativelanguage.googleapis.com/v1beta/models/gemini-2.5-flash-preview-09-2025:generateContent?key=${apiKey}`;
                
                const response = await fetch(url, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        contents: [{
                            parts: [{ text: `Translate this code from ${inputLang.value} to ${outputLang.value}. Output ONLY the raw translated code without any markdown formatting or explanations. Code: \n${code}` }]
                        }]
                    })
                });

                const data = await response.json();
                if (!response.ok) throw new Error(data.error?.message || 'Erreur API');

                let result = data.candidates[0].content.parts[0].text;
                outputCode.value = result.replace(/^```[a-z]*\n/i, '').replace(/\n```$/, '').trim();
            } catch (error) {
                outputCode.value = "Erreur: " + error.message;
            } finally {
                loadingOverlay.classList.add('hidden');
            }
        }
    </script>
</body>
</html>
